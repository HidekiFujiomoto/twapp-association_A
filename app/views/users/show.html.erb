
  <body>
    <div class="container">

      <nav class="navbar navbar-default">
        <div class="container-fluid">

          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">TwitterClone</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "TwitterClone", user_path(current_user.id), class: "navbar-brand" %>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><a href="/mutters/new">新規投稿</a></li>
              <li><a href="/mutters">つぶやき一覧</a></li>
              <li><a href="/contacts/new" target="_blank">問い合わせ</a></li>
            </ul>
          </div>

        </div>
      </nav>

      <div class="content">
        <section>
          <img src="/assets/twapp_cover.jpg">
        </section>


        <section class="preamble">
          <h3>あなたの画像</h3><br>
          <%= image_tag @user.image %>
          <%= form_with(model: @user, local: true) do |form| %>
            <div class="field">
              <%= form.label :image %>
              <%= form.file_field :image,class:"text_center" %>
              <%= form.hidden_field :image_cache %>
            </div>
            <div class="actions">
              <%= form.submit %>
            </div>
          <% end %>
        </section>

        <section class="preamble">
          <h3>あなたのお気に入り投稿</h3><br>
          <% @favorites_mutters.each do |favorites_tweet| %>
            <p><%= favorites_tweet.content %></p>
          <% end %>
        </section>

      </div> <!--End of content-->

      <footer class="footer">
        <p>Hideki Fujimoto test application</p>
      </footer>
    </div>
  </body>
